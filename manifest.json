{
  "manifest_version": 3,
  "name": "Instabat",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["popup.js"]
    }
  ],
  "background": {
    "scripts": ["popup.js"],
    "persistent": false
  },
  "action": {
    "default_popup": "popup.html"
  }
}